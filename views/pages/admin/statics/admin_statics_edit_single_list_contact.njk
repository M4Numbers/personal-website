{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>View Static Document</h2>
    <div class="static-document">
        <h3 class="mb-4">{{ content.static_id | replace("_", " ") | capitalize }}</h3>
        <form method="post" enctype="application/json" action="">
            <div class="contact-entries" id="contact-collection">
                {% for map in content.static_detail %}
                    <div class="static-item mb4">
                        <label for="sitemap-contact-method-{{ loop.index0 }}">Contact method</label>
                        <input class="form-control" id="sitemap-contact-method-{{ loop.index0 }}" name="sitemap-page[{{ loop.index0 }}][contact_method]" value="{{ map.contact_method }}" />
                        <label for="sitemap-contact-link-{{ loop.index0 }}">Contact link</label>
                        <input class="form-control" id="sitemap-contact-link-{{ loop.index0 }}" name="sitemap-page[{{ loop.index0 }}][contact_link]" value="{{ map.contact_link }}" />
                        <label for="sitemap-contact-fa-style-{{ loop.index0 }}">Contact FA style</label>
                        <input class="form-control" id="sitemap-contact-fa-style-{{ loop.index0 }}" name="sitemap-page[{{ loop.index0 }}][fa_style]" value="{{ map.fa_style }}" />
                        <label for="sitemap-contact-fa-icon-{{ loop.index0 }}">Contact FA icon</label>
                        <input class="form-control" id="sitemap-contact-fa-icon-{{ loop.index0 }}" name="sitemap-page[{{ loop.index0 }}][fa_icon]" value="{{ map.fa_icon }}" />
                    </div>
                {% endfor %}
            </div>
            <div class="admin-toolbar">
                <input type="submit" class="btn btn-primary" value="Save" />
                <input type="button" class="btn btn-secondary" value="Add new map" onclick="addNewContactEntry()" />
                <a href="/admin/statics/{{ content.static_id }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <hr />

{% endblock %}
